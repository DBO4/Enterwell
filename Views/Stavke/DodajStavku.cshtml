@model WebApplication1.Models.DodajStavkuVM
    

@{

}
<form method="post" action="DodajStavku">
    <h1>Dodaj stavku</h1>
    @if (TempData["Poruka"] != null)
    {
        <div class="alert alert-danger">@TempData["Poruka"]</div>
    }
  <div class="mb-3">
    <label for="" class="form-label">Opis</label>
    <input type="text" class="form-control" asp-for="Opis">
  </div>
  <div class="mb-3">
        <label for="" class="form-label">Kolicina na stanju</label>
        <input type="number" id="Kolicina" class="form-control" asp-for="Kolicina">
  </div>
    <div class="mb-3">
        <label for="" class="form-label">Cijena bez PDV-a</label>
        <input type="number" class="form-control" asp-for="JedinicnaCijenaBezPoreza">
    </div>

  <button type="submit" class="btn btn-primary">Sačuvaj</button>
</form>
